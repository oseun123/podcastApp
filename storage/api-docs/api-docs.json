                    },
                    "created_at": {
                        "description": "When the category was created",
                        "type": "string",
                        "format": "date-time",
                        "example": "2022-01-01T12:00:00Z"
                    },
                    "updated_at": {
                        "description": "When the category was last updated",
                        "type": "string",
                        "format": "date-time",
                        "example": "2022-01-01T12:00:00Z"
                    }
                },
                "type": "object"
            },
            "Episode": {
                "title": "Episode",
