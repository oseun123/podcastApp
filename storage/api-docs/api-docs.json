                        "example": 1
                    },
                    "title": {
                        "description": "Title of the podcast",
                        "type": "string",
                        "example": "Tech Talk"
                    },
                    "category_id": {
                        "description": "Category ID the podcast belongs to",
                        "type": "integer",
                        "example": 1
                    },
                    "created_at": {
                        "description": "When the podcast was created",
                        "type": "string",
                        "format": "date-time",
                        "example": "2022-01-01T12:00:00Z"
                    },
                    "updated_at": {
                        "description": "When the podcast was last updated",
